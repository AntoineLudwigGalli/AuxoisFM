{% extends 'base.html.twig' %}

{% block title %}Modifier un article{% endblock %}

{% block body %}
    <a href="{{ path('news_list') }}" class="btn btn-danger col-1 mt-2 ms-4 position-absolute">Retour</a>
    <div class="row">
        <h1 class="col-12 text-center my-5">Modifier un article</h1>
    </div>
    <div class="row">
        <div class="col-8 offset-2">
            {{ form_start(form) }}
            {{ form_row(form.title) }}
            {{ form_row(form.category) }}
            {{ form_row(form.coverPicture) }}
            {{ form_row(form.content) }}
            
            {#    todo : faire le style des boutons #}
            <div class="row d-flex flex-row justify-content-around mb-4">
                <button class="col-4 admin-button" type="submit">Modifier l'article</button>
                <a href="{{ path('news_list') }}" class="col-4 admin-button-cancel text-center">Annuler la modification de l'article</a>
            </div>
            
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}



