{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="col-12" id="header"></div>
    <div class="col-12" id="news"></div>
    <div class="col-12 d-flex flex-row" id="menu">
        <div class=" col-4 d-flex justify-content-center align-items-center text-center menu-link hvr-bounce-to-top target " id="podcasts">
            <p class="tiny">Grille des programmes et podcasts</p>
            <div class="normal">
                Texte normal
            </div>
        </div>
        
        <div class="col-4" id="player">
            <audio src="http://auxoisfm.ice.infomaniak.ch/auxoisfm-128" controls></audio>
        </div>
        
       
        <div class=" col-4 d-flex justify-content-center align-items-center text-center menu-link hvr-bounce-to-top" id="more-news">
                Encore + d'actus
        </div>
        
    </div>
{% endblock %}
{% block jsIncludes %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="{{ asset('js/program-grid-animation.js') }}"></script>
{% endblock %}



