{% extends 'base.html.twig' %}
{% block title %}Liste des émissions de l'animateur{% endblock %}

{% block body %}
        
            <div class="col-md-10 offset-md-1">
                <div class="row">
                    <h1 class="col-12 text-center my-5">Mes Emissions</h1>
                </div>
                
                <div class="row">
                    
                    <div class="col-12 col-md-12 mx-auto">
                        
                        {% if shows is not empty %}
                            
                            <div class="row pt-5">
                                
                                <div class="col-12 table-responsive">
                                    
                                    <table class="align-middle table table-striped table-hover">
                                        <thead>
                                        <tr>
                                            <th scope="col">Titre</th>
                                            <th scope="col">Animateur</th>
                                            <th scope="col">Heure</th>
                                            <th scope="col">Lien du podcast</th>
                                            <th scope="col">Logo</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        
                                        
                                        {% for show in shows %}
                                            <tr>
                                                
                                                <td>{{ show.name }}</td>
                                                <td>{{ show.animator }}</td>
                                                <td>{{ show.time|date('H:i:s') }}</td>
                                                <td>{{ show.podcastLink }}</td>
                                                <td>{{ show.logo }}</td>
                                                
                                                <td>
                                                    <div>
                                                        
                                                        <a class="text-decoration-none text-warning me-3"
{#                todo:                                                href="{{ path('admin_panel_shop_edit_', {'id': shop.id}) }}"#}
                                                        >
                                                            <i class="fa-solid fa-pen-to-square"></i>
                                                            Modifier
                                                        </a>
                                                    
                                                    </div>
                                                    <div class="mt-3">
                                                        <a onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette émission ?')" href="{{ path('show_delete', {'id': show.id, 'csrf_token' : csrf_token('show_delete' ~ show.id)}) }}"
                                                                class=" text-decoration-none text-danger">
                                                            <i class="fa-solid fa-trash-can"></i>
                                                            Supprimer
                                                        </a>
    
                                                    </div>
                                                </td>
                                            </tr>
                                        
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                    
                                </div>
                            
                            </div>
                           
                        {% else %}
                            <div class="alert alert-warning w-100 text-center">Aucune émission à afficher</div>
                        {% endif %}
                        <a href="#"><button class="btn btn-primary mb-3">Créer une boutique</button></a>
                    </div>
                
                </div>
            </div>
{% endblock %}



